<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.Sonicmatic" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_500</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background color -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/purple_700</item>

        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/purple_700</item>

        <!-- Text color -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/purple_500</item>

        <!-- Customize your theme here -->
    </style>

</resources>